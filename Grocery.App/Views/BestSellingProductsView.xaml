<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Grocery.App.Views.BestSellingProductsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
    xmlns:vm="clr-namespace:Grocery.App.ViewModels"
    Title="BestSellingProductsView"
    x:DataType="vm:BestSellingProductsViewModel">
    <Shell.TitleView>
        <Grid>
            <Label
                FontSize="Large"
                HorizontalOptions="Center"
                Text="Best verkochte producten"
                VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <Border
        Margin="10"
        Padding="10"
        HorizontalOptions="Center"
        Stroke="#C49B33"
        StrokeThickness="4">
        <CollectionView
            Margin="20"
            HorizontalOptions="Center"
            ItemsSource="{Binding Products}">
            <!--  EmptyView shown when Products is empty or null  -->
            <CollectionView.EmptyView>
                <StackLayout
                    Padding="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                    <Label
                        FontSize="Large"
                        HorizontalOptions="Center"
                        Text="Geen producten gevonden"
                        TextColor="Red"
                        VerticalOptions="Center" />
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
            </CollectionView.ItemsLayout>

            <CollectionView.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        Text="Rang"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        Text="Productnaam"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Column="2"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        Text="Voorraad"
                        VerticalOptions="Center" />
                    <Label
                        Grid.Column="3"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        Text="Aantal verkopen"
                        VerticalOptions="Center" />

                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:BestSellingProducts">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label
                            Grid.Column="0"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Ranking}"
                            VerticalOptions="Center" />
                        <Label
                            Grid.Column="1"
                            Text="{Binding Name}"
                            VerticalOptions="Center" />
                        <Label
                            Grid.Column="2"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Stock}"
                            VerticalOptions="Center" />
                        <Label
                            Grid.Column="3"
                            HorizontalTextAlignment="Center"
                            Text="{Binding NrOfSells}"
                            VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Border>
</ContentPage>